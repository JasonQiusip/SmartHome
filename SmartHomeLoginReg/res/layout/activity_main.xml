<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.smarthomeloginreg.ui.activity.LoginAty" >

    <EditText
        android:id="@+id/edtLoginUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:hint="username"
        android:ems="10" >
    </EditText>

    <EditText
        android:id="@+id/edtLoginPwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
         android:layout_below="@+id/edtLoginUsername"
          android:layout_marginTop="8dp"
        android:hint="password"
        android:ems="10" >
    </EditText>

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtLoginPwd"
        android:layout_centerHorizontal="true"
         android:layout_marginTop="8dp"
        android:text="Login" />

    <Button
        android:id="@+id/btnForgetPwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnLogin"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="8dp"
        android:text="forgetPwd" />
    
        <Button
        android:id="@+id/btnPwdNew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnForgetPwd"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="20dp"
        android:text="newPwd" />
        
        <EditText
        android:id="@+id/edtLoginVal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnPwdNew"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:hint="Val"
        android:ems="10" >
    </EditText>

</RelativeLayout>